{
    "compilerOptions": {
        "target": "esnext",
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true
    },
    "include": ["src"]
}
